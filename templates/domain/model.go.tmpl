package models

import (
	"{{ .Module }}/internal/domain/errs"
	validation "github.com/go-ozzo/ozzo-validation/v4"
	"github.com/go-ozzo/ozzo-validation/v4/is"
	"time"
)

type {{ .Model }} struct {
	ID        string `json:"id" db:"id,omitempty"`
	UpdatedAt time.Time `json:"updated_at" db:"updated_at,omitempty"`
	CreatedAt time.Time `json:"created_at" db:"created_at,omitempty"`
}

func (c *{{ .Model }}) Validate() error {
    err := validation.ValidateStruct(
        c,
        validation.Field(&c.ID, is.UUID),
    )
    if err != nil {
        return errs.FromValidationError(err)
    }
    return nil
}

type {{ .Model }}Filter struct {
    IDs        []string `json:"ids"`
    PageSize   *uint64  `json:"page_size"`
    PageNumber *uint64  `json:"page_number"`
    OrderBy    []string `json:"order_by"`
}

func (c *{{ .Model }}Filter) Validate() error {
	err := validation.ValidateStruct(
		c,
		validation.Field(&c.IDs),
		validation.Field(&c.PageSize),
		validation.Field(&c.PageNumber),
		validation.Field(&c.OrderBy),
	)
	if err != nil {
		return errs.FromValidationError(err)
	}
	return nil
}

