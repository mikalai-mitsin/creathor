package interceptors

import (
    "context"

    "{{ .Module }}/internal/domain/errs"
    "{{ .Module }}/internal/domain/models"
)

//nolint: lll
//go:generate mockgen -build_flags=-mod=mod -destination mock/{{ .MockFileName }} {{ .Module }}/internal/domain/interceptors {{ .InterceptorTypeName }}

type {{ .InterceptorTypeName }} interface {
    Get(
        ctx context.Context,
        id string,
{{- if .Auth }}
        requestUser *models.User,
{{- end }}
    ) (*models.{{ .ModelName }}, *errs.Error)
    List(
        ctx context.Context,
        filter *models.{{ .FilterTypeName }},
{{- if .Auth }}
        requestUser *models.User,
{{- end }}
    ) ([]*models.{{ .ModelName }}, uint64, *errs.Error)
    Create(
        ctx context.Context,
        create *models.{{ .CreateTypeName }},
{{- if .Auth }}
        requestUser *models.User,
{{- end }}
    ) (*models.{{ .ModelName }}, *errs.Error)
    Update(
        ctx context.Context,
        update *models.{{ .UpdateTypeName }},
    {{- if .Auth }}
        requestUser *models.User,
    {{- end }}
    ) (*models.{{ .ModelName }}, *errs.Error)
    Delete(
        ctx context.Context,
        id string,
{{- if .Auth }}
        requestUser *models.User,
{{- end }}
    ) *errs.Error
}
