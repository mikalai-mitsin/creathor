syntax = "proto3";

package {{ .ProtoPackage }};

option go_package = "{{ .Module }}/pkg/{{ .ProtoPackage }}";

message CreateToken {
  string email = 1;
  string password = 2;
}

message AccessToken {
  string token = 1;
}

message RefreshToken {
  string token = 1;
}

message RevokeToken {
  string token = 1;
}

message TokenPair {
  string access = 1;
  string refresh = 2;
}

service AuthService {
  rpc CreateToken({{ .ProtoPackage }}.CreateToken) returns ({{ .ProtoPackage }}.TokenPair);
  rpc RefreshToken({{ .ProtoPackage }}.RefreshToken) returns ({{ .ProtoPackage }}.TokenPair);
}
