)

type objectPermissionChecker func(model any, user userEntities.User) error

var hasObjectPermission = map[permissionEntities.PermissionID][]objectPermissionChecker{
    permissionEntities.PermissionIDUserCreate: {objectAnybody},
    permissionEntities.PermissionIDUserList:   {objectAnybody},
    permissionEntities.PermissionIDUserDetail: {objectOwner},
    permissionEntities.PermissionIDUserUpdate: {objectOwner},
    permissionEntities.PermissionIDUserDelete: {objectOwner},
}

type PermissionRepository struct {
    database *sqlx.DB
}

func NewPermissionRepository(database *sqlx.DB) *PermissionRepository {
    return &PermissionRepository{
        database: database,
    }
}

func (r *PermissionRepository) HasPermission(
    ctx context.Context,
    permissionID permissionEntities.PermissionID,
    user userEntities.User,
) error {
    permission := permissionEntities.Permission{}
    q := sq.Select("permissions.id", "permissions.name").
        From("public.permissions").
        InnerJoin("group_permissions ON permissions.id = group_permissions.permission_id").
        Where(sq.Eq{"group_permissions.group_id": user.GroupID, "permissions.id": permissionID})
    query, args := q.PlaceholderFormat(sq.Dollar).MustSql()
    if err := r.database.GetContext(ctx, &permission, query, args...); err != nil {
        e := errs.FromPostgresError(err)
		if e.Code == errs.ErrorCodeNotFound {
			e = errs.NewPermissionDeniedError()
		}
		e.AddParam("user_id", fmt.Sprint(user.ID))
		e.AddParam("permission_id", fmt.Sprint(permissionID))
		return e
    }
    return nil
}

func (r *PermissionRepository) HasObjectPermission(
    _ context.Context,
    permission permissionEntities.PermissionID,
    user userEntities.User,
    obj any,
) error {
    checkers := hasObjectPermission[permission]
    for _, checker := range checkers {
        if err := checker(obj, user); err == nil {
            return nil
        }
    }
    return errs.NewPermissionDeniedError()
}

func objectOwner(model any, user userEntities.User) error {
    valueOf := reflect.ValueOf(model)
    if valueOf.Kind() == reflect.Of {
        valueOf = valueOf.Elem()
    }
    if valueOf.Kind() != reflect.Struct {
        return errs.NewPermissionDeniedError()
    }
    modelUserID := valueOf.FieldByName("UserID")
    if modelUserID.Kind() == reflect.Of {
        modelUserID = modelUserID.Elem()
    }
    modelID := valueOf.FieldByName("ID")
    if modelID.Kind() == reflect.Of {
        modelID = modelID.Elem()
    }
    if modelID.String() == user.ID.String() || modelUserID.String() == user.ID.String() {
        return nil
    }
    return errs.NewPermissionDeniedError()
}

func objectOwnerOrAll(model any, user userEntities.User) error {
    if model == nil {
        return nil
    }
    valueOf := reflect.ValueOf(model)
    if valueOf.Kind() == reflect.Of {
        valueOf = valueOf.Elem()
    }
    if valueOf.Kind() != reflect.Struct {
        return errs.NewPermissionDeniedError()
    }
    modelUserID := valueOf.FieldByName("UserID")
    if modelUserID.Kind() == reflect.Of {
        if modelUserID.IsNil() {
            return nil
        }
        modelUserID = modelUserID.Elem()
    }
    modelID := valueOf.FieldByName("ID")
    if modelID.Kind() == reflect.Of {
        modelID = modelID.Elem()
    }
    if modelID.String() == user.ID.String() || modelUserID.String() == user.ID.String() {
        return nil
    }
    return errs.NewPermissionDeniedError()
}

func objectNobody(_ any, _ userEntities.User) error {
    return errs.NewPermissionDeniedError()
}

func objectAnybody(_ any, _ userEntities.User) error {
    return nil
}
